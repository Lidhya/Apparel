<script>
  jQuery('#form1').validate({
      rules:{
        email:{
          required:true,
          email:true
        },
        password:{
          required:true,
          minlength:5
        }

      },
      messages:{
        email :{
          required:"Enter valid email address",
          email:"Enter valid email Id"
        },
        password:{
          required:"Password is required",
          minlength:"Atleast 5 character required"
          }
      },
      submitHandler:function(form){
        form.submit();
      }
    })

    jQuery('#form2').validate({
      rules:{
        fname:'required',

        email:{
          required:true,
          email:true
        },
        phone:{
