<section class="container-fluid">
  <div class="d-flex flex-row align-items-center justify-content-center pt-5">
    <div class="bannerText-section1">
      <h1 class="bText1">Trendy is the last stage before tacky</h1>
      <h5 class="text-wrap d-none d-sm-block pt-4">"What you wear is how you present yourself to the world, especially
        today, when human contacts are so quick. Fashion is instant language."<strong> —Miuccia Prada</strong>
      </h5>
    </div>
    <div class="d-flex flex-row hover-zoom">
      <img class="img-fluid bImage1 d-none d-md-block mt-5 rounded-5" style="width: 380px; height: 490px;"
        src="/product-images/banner-1.jpg" alt="" />
      <img class="img-fluid bImage2 d-none d-lg-block " style="width: 250px; height: 330px;"
        src="/product-images/banner-2.jpg" alt="" />
    </div>
  </div>
</section>

{{#each categories}}
<section id="{{this.category}}" style="background-color: #eee;" class="mt-3">
  <div class="text-center container py-3 rounded-5">
    <h4 class="mt-4 mb-5 separator text-uppercase logo text-uppercase" style="color: #4a1942;">
      <strong>{{this.category}}</strong>
      {{#if this.offer.isEnabled}}
      <span class="badge bg-primary ms-2">{{this.offer.percent}}% OFF</span>
      {{/if}}
    </h4>
    <div class="owl-carousel owl-theme">
      {{#each ../products}}
      {{#ifCond this.category ../this.category}}
      <div class="item">
        <div class="mb-4">
          <div class="card h-100" style="background-color: transparent;">
            <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
              <img src="{{this.image_path.[0]}}" class="w-100" style="height: 25rem;" />
              <a href="/product-details/{{this._id}}">
                {{#if ../this.offer.isEnabled}}
                <div class="mask">
                  <div class="d-flex justify-content-start align-items-end h-100">
                    <h5><span class="badge bg-primary ms-2">{{../this.offer.percent}}% Off</span></h5>
                  </div>
                </div>
                {{/if}}
                <div class="hover-overlay">
                  <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </div>
              </a>
            </div>
            <div class="card-body">
              <a href="/product-details/{{this._id}}" class="text-start text-reset">
                <div class="d-flex justify-content-between">
                  <h5 class="card-title">{{this.name}}</h5>
                  {{!-- <button onclick="addToWishlist('{{this._id}}')" class="text-dark "><i
                      class="fa-regular fa-heart "></i></button> --}}
                </div>
                {{#if this.stock}}
                <p class="card-text text-success">In stock</p>
                {{else}}
                <p class="card-text text-danger">Out of stock</p>
                {{/if}}
              </a>
              {{#if ../this.offer.isEnabled}}
              <h6 class="text-start"><del> ₹{{this.actual_price}}</del> <span
                  class="text-success">{{../this.offer.percent}}% off</span></h6>
              {{else}}
              <h6 class="text-start"><span class="text-danger"><del> ₹{{this.actual_price}}</del></span>
                ₹{{this.discount_price}}</h6>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/ifCond}}
      {{/each}}
    </div>
  </div>
</section>
{{/each}}